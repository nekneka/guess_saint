<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/main_screen_blackbg"
    android:layout_below="@+id/appBar"
    android:layout_alignParentBottom="true"
    >

    <TextView
        android:id="@+id/mainScreenGuessSaintsScoreValue"

        android:text="@string/default_high_score_value"
        android:textStyle="bold"
        android:textSize="60sp"
        android:textColor="@color/color_text_main_screen"
        android:textColorHighlight="@color/color_text_main_screen"

        android:layout_centerHorizontal="true"
        android:layout_above="@+id/mainScreenGuessSaintsScoreText"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:visibility="invisible"
    />

    <TextView
        android:id="@+id/mainScreenGuessSaintsScoreText"

        android:text="@string/high_score"

        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/color_text_main_screen"
        android:textColorHighlight="@color/color_text_main_screen"

        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/mainScreenGuessActivityButton"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:visibility="invisible"
    />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/mainScreenGuessActivityButton"

        android:text="@string/button_start"

        android:layout_width="250dp"
        android:layout_height="50dp"

        style="@style/Widget.AppCompat.Button.Colored"
        android:theme="@style/Button"

        android:layout_centerHorizontal="true"
        android:layout_above="@+id/mainScreenSaintsListActivity"
    >
    </android.support.v7.widget.AppCompatButton>

    <Button
        android:id="@+id/mainScreenSaintsListActivity"

        android:text="@string/button_info"

        android:layout_width="250dp"
        android:layout_height="50dp"

        style="@style/Widget.AppCompat.Button.Colored"
        android:theme="@style/Button"

        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
    >
    </Button>

</RelativeLayout>
